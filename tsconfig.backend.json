{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist/backend",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["server.ts", "backend/**/*", "src/utils/prisma/**/*"],
  "exclude": ["node_modules", "dist", "backend/test-*.ts", "backend/create-database.ts", "backend/import-data.ts", "src/**/*.tsx", "src/**/*.ts", "src/components/**/*", "src/pages/**/*", "src/services/**/*"]
}
