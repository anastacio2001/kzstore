const API_BASE = '/api';

export interface Coupon {
  id: string;
  code: string;
  description?: string;
  discount_type: 'percentage' | 'fixed';
  discount_value: number;
  minimum_order_value?: number;
  max_discount?: number;
  usage_limit?: number;
  used_count?: number;
  valid_from?: string;
  valid_until?: string;
  is_active: boolean; // API retorna is_active (snake_case do Prisma)
  applicable_categories?: string[];
  applicable_products?: string[];
  created_at: string;
  updated_at: string;
}

/**
 * Buscar todos os cupons
 */
export async function getAllCoupons(): Promise<Coupon[]> {
  try {
    console.log('üé´ [COUPONS] Fetching all coupons from API...');
    
    const response = await fetch(`${API_BASE}/coupons`);
    if (!response.ok) throw new Error('Failed to fetch coupons');
    
    const data = await response.json();
    console.log(`‚úÖ [COUPONS] Loaded ${data.coupons?.length || 0} coupons`);
    return data.coupons || [];
  } catch (error) {
    console.error('‚ùå [COUPONS] Error fetching coupons:', error);
    throw error;
  }
}

