/**
 * Buscar pedidos recentes (√∫ltimos N dias)
 */
export async function getRecentOrders(days: number = 7): Promise<Order[]> {
  try {
    const date = new Date();
    date.setDate(date.getDate() - days);

    const orders = await getAllOrders();
    return orders.filter(o => new Date(o.created_at) >= date);
  } catch (error) {
    console.error(`‚ùå Erro ao buscar pedidos dos √∫ltimos ${days} dias:`, error);
    throw error;
  }
}

