/**
 * Validar estoque antes de criar pedido
 */
export async function validateStock(items: OrderItem[]): Promise<{
  valid: boolean;
  errors: string[];
}> {
  const errors: string[] = [];

  console.log('üîç [VALIDATE STOCK] Starting validation for', items.length, 'items');

  for (const item of items) {
    try {
      console.log(`üîç [VALIDATE STOCK] Checking product: ${item.product_id} (${item.product_name})`);
      
      // Buscar produto via API
      const response = await fetch(`${API_BASE}/products/${item.product_id}`);
      if (!response.ok) {
        console.error(`‚ùå [VALIDATE STOCK] Product not found: ${item.product_id}`);
        errors.push(`Produto "${item.product_name}" n√£o encontrado`);
        continue;
      }

      const data = await response.json();
      const product = data.product;

      console.log(`‚úÖ [VALIDATE STOCK] Product found:`, product.nome, `- Stock: ${product.estoque || 0}`);

      const currentStock = product.estoque || 0;
      if (currentStock < item.quantity) {
        console.error(`‚ùå [VALIDATE STOCK] Insufficient stock for ${product.nome}. Available: ${currentStock}, Requested: ${item.quantity}`);
        errors.push(
          `Estoque insuficiente para "${product.nome}". Dispon√≠vel: ${currentStock}, Solicitado: ${item.quantity}`
        );
      }
    } catch (error) {
      console.error(`‚ùå [VALIDATE STOCK] Error validating product "${item.product_name}":`, error);
      errors.push(`Erro ao validar produto "${item.product_name}"`);
    }
  }

  console.log(`üîç [VALIDATE STOCK] Validation complete. Valid: ${errors.length === 0}, Errors: ${errors.length}`);

  return {
    valid: errors.length === 0,
    errors,
  };
}

/**
 * Criar novo pedido
 */
export async function createOrder(orderData: CreateOrderData): Promise<Order> {
  try {
    console.log('üì¶ [CREATE ORDER] Criando novo pedido...', orderData);

    // 1. Validar estoque
    const stockValidation = await validateStock(orderData.items);
    if (!stockValidation.valid) {
      throw new Error(`Valida√ß√£o de estoque falhou:\n${stockValidation.errors.join('\n')}`);
    }

    // 2. Criar pedido
    const orderNumber = generateOrderNumber();
    const order = {
      order_number: orderNumber,
      user_id: orderData.user_id,
      user_email: orderData.user_email,
      user_name: orderData.user_name,
      items: orderData.items,
      subtotal: orderData.subtotal,
      shipping_cost: orderData.shipping_cost,
      discount_amount: orderData.discount_amount,
      discount_type: orderData.discount_type,
      discount_details: orderData.discount_details,
      tax_amount: orderData.tax_amount,
      total: orderData.total,
      status: 'pending',
      payment_method: orderData.payment_method,
      payment_status: 'pending',
      shipping_address: orderData.shipping_address,
      notes: orderData.notes,
    };

    // 3. Salvar via API
    const authHeaders = getAuthHeaders();
    const response = await fetch(`${API_BASE}/orders`, {
      method: 'POST',
      headers: { 
        'Content-Type': 'application/json',
        ...authHeaders
      },
      body: JSON.stringify(order),
      credentials: 'include'
    });

    if (!response.ok) {
      const errorData = await response.json();
      throw new Error(errorData.error || 'Failed to create order');
    }

    const data = await response.json();
    console.log('‚úÖ [CREATE ORDER] Order saved:', data.order.order_number);

    // 4. Atualizar estoque
    for (const item of orderData.items) {
      try {
        await fetch(`${API_BASE}/products/${item.product_id}/stock`, {
          method: 'PATCH',
          headers: { 
            'Content-Type': 'application/json',
            ...authHeaders
          },
          body: JSON.stringify({ quantity: -item.quantity }),
        });
      } catch (error) {
        console.error(`‚ùå Erro ao atualizar estoque do produto ${item.product_id}:`, error);
      }
    }

    console.log('‚úÖ [CREATE ORDER] Pedido criado com sucesso:', data.order.order_number);
    return data.order;
  } catch (error) {
    console.error('‚ùå [CREATE ORDER] Erro ao criar pedido:', error);
    throw error;
  }
}

/**
 * Atualizar status do pedido
 */
export async function updateOrderStatus(
  orderId: string,
  status: Order['status'],
  additionalData?: Partial<Order>
): Promise<Order> {
  try {
    console.log(`üîÑ [UPDATE ORDER STATUS] Updating order ${orderId} to ${status}`);
    
    const updateData: any = {
      status,
      updated_at: new Date().toISOString(),
      ...additionalData,
    };

    // Adicionar timestamp espec√≠fico baseado no status
    if (status === 'delivered') {
      updateData.delivered_at = new Date().toISOString();
    } else if (status === 'cancelled') {
      updateData.cancelled_at = new Date().toISOString();
    }

    // Atualizar via API
    const authHeaders = getAuthHeaders();
    const response = await fetch(`${API_BASE}/orders/${orderId}/status`, {
      method: 'PATCH',
      headers: { 
        'Content-Type': 'application/json',
        ...authHeaders
      },
      body: JSON.stringify(updateData),
      credentials: 'include'
    });

    if (!response.ok) {
      const errorData = await response.json();
      throw new Error(errorData.error || 'Failed to update order status');
    }

    const data = await response.json();
    console.log(`‚úÖ [UPDATE ORDER STATUS] Order ${data.order.order_number} updated to ${status}`);
    return data.order;
  } catch (error) {
    console.error('‚ùå Erro ao atualizar status do pedido:', error);
    throw error;
  }
}

