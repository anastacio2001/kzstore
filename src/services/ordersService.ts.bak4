/**
 * Atualizar estoque ap√≥s pedido - reduz o estoque
 */
async function reduceProductStock(items: OrderItem[]): Promise<void> {
  console.log('üì¶ [UPDATE STOCK] Starting stock reduction for', items.length, 'items');
  
  for (const item of items) {
    try {
      // Buscar produto atual
      const product = await getProductById(item.product_id);

      if (!product) {
        console.error(`‚ùå [UPDATE STOCK] Product not found: ${item.product_id}`);
        throw new Error(`Produto \"${item.product_name}\" n√£o encontrado`);
      }

      // Calcular novo estoque
      const oldStock = product.estoque || 0;
      const newStock = Math.max(0, oldStock - item.quantity);
      
      console.log(`üì¶ [UPDATE STOCK] ${product.nome}: ${oldStock} ‚Üí ${newStock}`);

      // Atualizar produto no Supabase
      await updateProductStock(item.product_id, -item.quantity);

      console.log(`‚úÖ [UPDATE STOCK] Stock updated: ${item.product_name} - New stock: ${newStock}`);
    } catch (error) {
      console.error(`‚ùå [UPDATE STOCK] Error updating stock for ${item.product_name}:`, error);
      throw error;
    }
  }
  
  console.log('‚úÖ [UPDATE STOCK] All stock updates complete');
}